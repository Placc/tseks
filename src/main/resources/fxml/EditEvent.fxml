<BorderPane id="editContentPane" prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #ffffff;" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.phicaro.tseks.ui.controller.EditEventController">
   <center>
      <SplitPane dividerPositions="0.4" prefHeight="160.0" prefWidth="200.0" style="-fx-background-color: #ffffff;" BorderPane.alignment="CENTER">
         <items>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <VBox>
                           <children>
                              <Label fx:id="eventNameLabel" text="Label">
                                 <VBox.margin>
                                    <Insets bottom="40.0" left="10.0" right="10.0" top="20.0" />
                                 </VBox.margin>
                                 <font>
                                    <Font size="20.0" />
                                 </font>
                              </Label>
                              <Label fx:id="eventLocationLabel" text="Label">
                                 <VBox.margin>
                                    <Insets bottom="20.0" left="10.0" right="10.0" top="10.0" />
                                 </VBox.margin>
                                 <font>
                                    <Font size="16.0" />
                                 </font>
                              </Label>
                              <Label fx:id="eventDescLabel" text="Label">
                                 <VBox.margin>
                                    <Insets left="10.0" top="20.0" />
                                 </VBox.margin>
                                 <font>
                                    <Font size="16.0" />
                                 </font>
                              </Label>
                              <Label fx:id="eventDateLabel" text="Label">
                                 <VBox.margin>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="30.0" />
                                 </VBox.margin>
                                 <font>
                                    <Font size="16.0" />
                                 </font>
                              </Label>
                           </children>
                        </VBox>
                        <VBox prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
                           <children>
                              <TextField fx:id="eventNameEditText" VBox.vgrow="ALWAYS">
                                 <VBox.margin>
                                    <Insets bottom="40.0" right="10.0" top="20.0" />
                                 </VBox.margin>
                              </TextField>
                              <TextField fx:id="eventLocationEditText">
                                 <VBox.margin>
                                    <Insets bottom="10.0" right="10.0" top="10.0" />
                                 </VBox.margin>
                              </TextField>
                              <TextField fx:id="eventDescEditText">
                                 <VBox.margin>
                                    <Insets bottom="20.0" right="10.0" top="20.0" />
                                 </VBox.margin>
                              </TextField>
                              <HBox fx:id="eventDateHBox">
                                 <children>
                                    <DatePicker fx:id="eventDatePicker" styleClass="date-picker">
                                       <HBox.margin>
                                          <Insets right="10.0" />
                                       </HBox.margin>
                                    </DatePicker>
                                 </children>
                                 <VBox.margin>
                                    <Insets top="5.0" />
                                 </VBox.margin>
                              </HBox>
                           </children>
                        </VBox>
                     </children>
                  </HBox>
                  <VBox alignment="CENTER_LEFT">
                     <children>
                        <Label fx:id="previewLabel" text="Label">
                           <VBox.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="30.0" />
                           </VBox.margin>
                        </Label>
                        <ImageView fx:id="previewImageView" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" VBox.vgrow="ALWAYS">
                           <VBox.margin>
                              <Insets left="10.0" right="10.0" />
                           </VBox.margin>
                           <viewport>
                              <Rectangle2D height="400.0" width="600.0" />
                           </viewport>
                        </ImageView>
                        <HBox prefHeight="100.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
                     </children>
                  </VBox>
               </children>
            </VBox>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <Label fx:id="tableGroupLabel" text="Label">
                  <VBox.margin>
                     <Insets bottom="10.0" />
                  </VBox.margin>
                  <font>
                     <Font size="16.0" />
                  </font>
               </Label>
                <TableView fx:id="eventTableView" prefHeight="527.0" prefWidth="435.0" VBox.vgrow="ALWAYS">
                  <columns>
                    <TableColumn fx:id="tableNumberColumn" prefWidth="75.0" text="C1" />
                    <TableColumn fx:id="seatsColumn" prefWidth="75.0" text="C2" />
                      <TableColumn fx:id="categoryColumn" prefWidth="75.0" text="Column X" />
                      <TableColumn fx:id="optionsColumn" prefWidth="75.0" />
                  </columns>
                   <columnResizePolicy>
                      <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                   </columnResizePolicy>
                </TableView>
               <HBox VBox.vgrow="ALWAYS">
                  <children>
                     <Button fx:id="addTableGroupButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" styleClass="add-table-group-btn" text="Button" HBox.hgrow="ALWAYS">
                        <HBox.margin>
                           <Insets />
                        </HBox.margin>
                     </Button>
                  </children>
               </HBox>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </VBox>
         </items>
      </SplitPane>
   </center>
   <bottom>
      <HBox alignment="BOTTOM_RIGHT" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="saveButton" mnemonicParsing="false" styleClass="success" text="Button">
               <HBox.margin>
                  <Insets left="10.0" right="20.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="discardButton" mnemonicParsing="false" styleClass="danger" text="Button">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Button>
         </children>
         <BorderPane.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </BorderPane.margin>
      </HBox>
   </bottom>
</BorderPane>
