<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Rectangle2D?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefWidth="320.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.phicaro.tseks.ui.controller.edit.EditEventInfoController">
    <center>
        <VBox>
            <children>
               <HBox VBox.vgrow="ALWAYS">
                  <children>
                     <VBox HBox.hgrow="ALWAYS">
                        <children>
                           <Label fx:id="eventNameLabel" text="Label">
                              <VBox.margin>
                                 <Insets bottom="40.0" left="10.0" right="10.0" top="20.0" />
                              </VBox.margin>
                              <font>
                                 <Font size="20.0" />
                              </font>
                           </Label>
                           <Label fx:id="eventTitleLabel" text="Label">
                              <VBox.margin>
                                 <Insets bottom="20.0" left="10.0" right="10.0" top="5.0" />
                              </VBox.margin>
                              <font>
                                 <Font size="16.0" />
                              </font>
                           </Label>
                        <Label fx:id="eventLocationLabel" text="Label">
                           <font>
                              <Font size="16.0" />
                           </font>
                           <VBox.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </VBox.margin>
                        </Label>
                           <Label fx:id="eventDescLabel" text="Label">
                              <VBox.margin>
                                 <Insets left="10.0" top="20.0" />
                              </VBox.margin>
                              <font>
                                 <Font size="16.0" />
                              </font>
                           </Label>
                           <Label fx:id="eventDateLabel" text="Label">
                              <VBox.margin>
                                 <Insets bottom="10.0" left="10.0" right="10.0" top="30.0" />
                              </VBox.margin>
                              <font>
                                 <Font size="16.0" />
                              </font>
                           </Label>
                        </children>
                     </VBox>
                     <VBox HBox.hgrow="ALWAYS">
                        <children>
                           <TextField fx:id="eventNameEditText" VBox.vgrow="ALWAYS">
                              <VBox.margin>
                                 <Insets bottom="40.0" right="10.0" top="20.0" />
                              </VBox.margin>
                           </TextField>
                           <TextField fx:id="eventTitleEditText" VBox.vgrow="ALWAYS">
                              <VBox.margin>
                                 <Insets bottom="10.0" right="10.0" top="10.0" />
                              </VBox.margin>
                           </TextField>
                        <TextField fx:id="eventLocationEditText">
                           <VBox.margin>
                              <Insets bottom="10.0" right="10.0" top="20.0" />
                           </VBox.margin>
                        </TextField>
                           <TextField fx:id="eventDescEditText" VBox.vgrow="ALWAYS">
                              <VBox.margin>
                                 <Insets bottom="20.0" right="10.0" top="20.0" />
                              </VBox.margin>
                           </TextField>
                           <HBox fx:id="eventDateHBox" VBox.vgrow="ALWAYS">
                              <children>
                                 <DatePicker fx:id="eventDatePicker" styleClass="date-picker">
                                    <HBox.margin>
                                       <Insets right="10.0" />
                                    </HBox.margin>
                                 </DatePicker>
                              </children>
                              <VBox.margin>
                                 <Insets top="5.0" />
                              </VBox.margin>
                           </HBox>
                        </children>
                     </VBox>
                  </children>
               </HBox>
               <VBox alignment="CENTER_LEFT" VBox.vgrow="ALWAYS">
                  <children>
                     <Label fx:id="previewLabel" text="Label" VBox.vgrow="ALWAYS">
                        <VBox.margin>
                           <Insets bottom="10.0" left="10.0" right="10.0" top="30.0" />
                        </VBox.margin>
                     </Label>
                     <ImageView fx:id="previewImageView" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" VBox.vgrow="ALWAYS">
                        <VBox.margin>
                           <Insets left="10.0" right="10.0" />
                        </VBox.margin>
                        <viewport>
                           <Rectangle2D height="400.0" width="600.0" />
                        </viewport>
                     </ImageView>
                     <HBox prefHeight="100.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
                  </children>
               </VBox>
            </children>
         </VBox>
    </center>
</BorderPane>
