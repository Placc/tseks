<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>

<BorderPane fx:id="root" style="-fx-background-color: white;" styleClass="root" stylesheets="@../styles/Styles.css" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.phicaro.tseks.ui.controller.MainController">
   <center>
      <StackPane fx:id="content" alignment="BOTTOM_LEFT" BorderPane.alignment="CENTER" />
   </center>
   <top>
      <StackPane fx:id="header" BorderPane.alignment="CENTER">
         <children>
              <HBox fx:id="toolbar" minHeight="40.0" styleClass="tool-bar">
               <children>
                  <Button fx:id="backButton" mnemonicParsing="false" styleClass="back-btn" HBox.hgrow="NEVER" />
                  <HBox alignment="CENTER_LEFT" styleClass="headers-region" HBox.hgrow="ALWAYS">
                     <children>
                        <Label fx:id="pageTitle" style="-fx-font-size: 24px;" styleClass="hea" text="Label" />
                        <Pane fx:id="messagePane">
                            <HBox.margin>
                                <Insets left="40.0" />
                            </HBox.margin>
                        </Pane>
                     </children>
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </HBox>
                  <Button fx:id="optionButton" alignment="CENTER" mnemonicParsing="false" styleClass="arrow-button">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
      </StackPane>
   </top>
</BorderPane>
